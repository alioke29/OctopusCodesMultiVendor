<script>
    var popupModal = (function () {
        var modal = null;
        return {
            openPopup(url) {
                modal = picoModal({
                    content: '<iframe frameborder="0" style="height:90vh; width:100%;" src="' + url + '"></iframe>',
                    width: "75%",
                    closeButton: false,
                    overlayClose: false,
