                }).show();
            },
            closePopup() {
                try {
                    modal.close();
                } catch (e) { }
            }
        }
    }());
    function Pay() {
        var cardData = {
            "card_number": $('#cardnumber').val(),
            "card_exp_month": 02,
            "card_exp_year": 2025,
            "card_cvv": 123,
        };
        // callback functions
        var options1 = {
            onSuccess: function (response) {
                // Success to get card token_id, implement as you wish here
                console.log('Success to get card token_id, response:', response);
                var token_id = response.token_id;
                Charge(token_id);
                //$("#CardToken").val(token_id);
                //$( "form" ).submit();
                console.log('This is the card token_id:', token_id);
            },
            onFailure: function (response) {
                // Fail to get card token_id, implement as you wish here
                console.log('Fail to get card token_id, response:', response);
            }
        };

        MidtransNew3ds.getCardToken(cardData, options1);
    }
    function Authenticate(redirect_url) {
        //var redirect_url = 'https://localhost:44338';
        // callback functions
        var options2 = {
            performAuthentication: function (redirect_url) {
                // Implement how you will open iframe to display 3ds authentication redirect_url to customer
                popupModal.openPopup(redirect_url);
            },
            onSuccess: function (response) {
                // 3ds authentication success, implement payment success scenario
                console.log('response:', response);
                var token_id = response.token_id;
                //Charge(token_id);
                popupModal.closePopup();
                alert('Payment ok');
                
                $("form").submit();
            },
            onFailure: function (response) {
                // 3ds authentication failure, implement payment failure scenario
                console.log('response:', response);
                popupModal.closePopup();
            },
            onPending: function (response) {
                // transaction is pending, transaction result will be notified later via POST notification, implement as you wish here
                console.log('response:', response);
                popupModal.closePopup();
            }
        };
        MidtransNew3ds.authenticate(redirect_url, options2);
    }
    function Charge(tokenID) {
        //Charge
        var vData =
        {
            "payment_type": "credit_card",
            "transaction_details":
            {
                "order_id": $("#OrderID").val(),
                "gross_amount": $("#TotalAmount").val()
            },
            "credit_card":
            {
                "token_id": tokenID,
                "authentication": true
            }

        }
        var content = JSON.stringify(vData); //content = "[{"Id":"1","Date":"7/12/2017 12:00:00 AM"}]"
        console.log("Charge...");
        console.log("content:" + content);
        console.log("vData:" + vData);
        console.log("btoa:" + btoa('SB-Mid-server-2CNZoUsMukjgYzB2aRIxqfAX'));
        $.ajax({
            url: 'https://cors-anywhere.herokuapp.com/' + 'https://api.sandbox.midtrans.com/v2/charge',
            type: "POST",
            headers: {
                'Accept': 'application/json',
                'Authorization': 'Basic ' + btoa('SB-Mid-server-2CNZoUsMukjgYzB2aRIxqfAX'),
                'Content-Type': 'application/json',
            },
            data: content,
            contentType: "application/json",
            beforeSend: function () {
                // Show image container
                $("#loading-overlay").show();
            },
            success: function (result) {
                console.log("result:" + result.status_code);
                console.log("result:" + result.status_message);
                //alert("success" + result);
                if (result.status_code != '201') {
                    alert('Payment issue:' + result.status_message);
                } else {
                    Authenticate(result.redirect_url);
                }
                //$("form").submit();

            },
            error: function (result) {
                alert("failure" + result);
                console.log("result:" + result);
            },
            complete: function (data) {
                // Hide image container
                $("#loading-overlay").hide();
            }
        });
    }
</script>